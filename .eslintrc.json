{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["warn", 2],
        "no-unused-vars": ["off", { "vars": "local" }],
        "quotes": ["warn", "single"],
        "react/prop-types": "off",
        "semi": ["warn", "always"],
        "space-infix-ops": "warn"
    }
}
